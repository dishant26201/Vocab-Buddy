<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WordQuiz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/lead</item>
        <item name="android:windowBackground">@color/nightBg</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/lead</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
<!--        <item name="android:typeface">sans</item>-->
    </style>

    <!-- main question -->
    <style name="mainQuestion" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- vocab buddy heading -->
    <style name="vocabBuddy" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- score text -->
    <style name="scoreText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- how to play -->
    <style name="howToPlay" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- input heading -->
    <style name="inputHeading" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Create a  quiz heading -->
    <style name="createQuiz" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- test type -->
    <style name="testType" parent="Widget.AppCompat.TextView">
        <item name="android:textColorHint">@color/lightGrey</item>
    </style>

    <!-- Enter difficulty -->
    <style name="enterDifficulty" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/lightGrey</item>
    </style>


    <!-- Card view -->
    <style name="cardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/nightBg</item>
    </style>

    <!-- Meaning enable text -->
    <style name="meaningEnableText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/disableGreyNight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Vector icon -->
    <style name="vectorIcon" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/white</item>
    </style>

    <!-- Setting item -->
    <style name="settingItem" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Word meaning -->
    <style name="wordMeaningMain" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Image button close -->
    <style name="closeButton" parent="Widget.AppCompat.ImageButton">
        <item name="srcCompat">@drawable/ic_close_night</item>
    </style>

    <!-- part of speech  -->
    <style name="partOfSpeech" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- part of speech meaning -->
    <style name="partOfSpeechMeaning" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/disableGrey</item>
    </style>

    <!-- row heading -->
    <style name="rowHeading" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- entry row -->
    <style name="entryRow" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
    </style>

    <!-- No action bar theme. -->
    <style name="NoActionBarTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/lead</item>
<!--        <item name="android:typeface">sans</item>-->
    </style>

</resources>